<h3>予定の新規追加</h3>

<%= render "shared/error", obj: @post %>

<%= form_with model: @post do |f| %>
  <table>
    <tr>
      <th><%= f.label :title ,"タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>

    <tr>
      <th><%= f.label :start_at ,"開始日" %></th>
      <td><%= f.date_field :start_at %></td>
    </tr>

    <tr>
      <th><%= f.label :finish_at ,"終了日" %></th>
      <td><%= f.date_field :finish_at %></td>
    </tr>

    <tr>
      <th><%= f.label :all_day ,"終日" %></th>
      <td><%= f.check_box :all_day %><p>終日の場合はチェックを入れます</p></td>
    </tr>

    <tr>
      <th><%= f.label :memo ,"スケジュールメモ" %></th>
      <td><%= f.text_area :memo %></td>
    </tr>
  </table>

  <div class = "link_btn">
    <ul>
      <li><%= f.submit "保存" %></li>
      <li><%= link_to "キャンセル", :posts %></li>
    </ul>
  </div>
  <% end %>