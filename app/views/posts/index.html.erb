<h3>予定一覧</h3>

<% if flash[:notice] %>
  <p class = "notice"><%= flash[:notice]%></p>
<% end %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日</th>
      <th>更新日時</th>
      <th>詳細</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td><%= post.start_at %></td>
        <td><%= post.finish_at %></td>
        <% if post.all_day == "1" %>
          <td><%= "○" %></td>
          <% else %>
          <td><%= "" %></td>
          <% end %>
        <td><%= post.updated_at.to_s(:datetime_jp) %></td>
        <td>
          <%= link_to "詳細", post %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to "新規登録", :new_post %></p>
